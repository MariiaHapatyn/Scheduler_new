@model Scheduler.DTO.Models.SchedulerDto
@using Scheduler.DataAccess.Models.Enums;

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="background m-5 p-5">
        <h2 class="mb-3">Edit</h2>
        <hr>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScheduleId" />
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupId" class="control-label"></label>
                <select asp-for="GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
                <span asp-validation-for="GroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherId" class="control-label"></label>
                <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <select asp-for="Day" class="form-control" asp-items="Html.GetEnumSelectList<Day>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson" class="control-label"></label>
                <select asp-for="Lesson" class="form-control" asp-items="Html.GetEnumSelectList<Lesson>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Lesson" class="text-danger"></span>
            </div>
            <br>
            <div>
                <a asp-action="Index" class="btn btn-primary float-left">Back to List</a>
                <input type="submit" value="Save" class="btn btn-primary float-right" />
            </div>
            <br>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
