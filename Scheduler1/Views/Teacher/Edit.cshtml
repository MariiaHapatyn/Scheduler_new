@model Scheduler.DTO.Models.TeacherDto

@using Scheduler.DataAccess.Models.Enums;

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="background m-5 p-5">
        <h2 class="mb-3">Edit</h2>
        <hr>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TeacherId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <select asp-for="Position" class="form-control" asp-items="Html.GetEnumSelectList<Position>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <br>
            <div>
                <a asp-action="Index" class="btn btn-primary float-left">Back to List</a>
                <input type="submit" value="Save" class="btn btn-primary float-right" />
            </div>
            <br>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
