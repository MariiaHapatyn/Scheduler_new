@model Scheduler.DTO.Models.RoomDto

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="background m-5 p-5">
        <div class="mb-3">
            <h2>Are you sure you want to delete this?</h2>
            <hr>
            <br>
        </div>
        <div class="form-group">
            <label asp-for="RoomNumberd" class="control-label"></label>
            <p class="form-control bg-grey text-left"> @Html.DisplayFor(model => model.RoomNumberd)</p>
        </div>
        <div class="form-group">
            <label asp-for="Adress" class="control-label"></label>
            <p class="form-control bg-grey text-left"> @Html.DisplayFor(model => model.Adress)</p>
        </div>
        <div class="form-group">
            <label asp-for="Capacity" class="control-label"></label>
            <p class="form-control bg-grey text-left"> @Html.DisplayFor(model => model.Capacity)</p>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <p class="form-control bg-grey text-left"> @Html.DisplayFor(model => model.Type)</p>
        </div>
        <br>
        <div>
            <a asp-action="Index" class="btn btn-primary float-left">Back to List</a>
            <form asp-action="Delete">
                <input type="hidden" asp-for="RoomId" />
                <input type="submit" value="Delete" class="btn btn-primary float-right" />
            </form>
        </div>
    </div>
</div>